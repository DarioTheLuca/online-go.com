html, body
    margin: 0
    padding: 0
    height: 100%
    overflow: hidden

#gotv-container
    display: flex
    flex-direction: column
    height: calc(100vh - var(--navbar-height))
    width: 100vw
    overflow: hidden

    .gotv-layout
        display: flex
        height: 100%
        width: 100%
        position: relative
        overflow: hidden

        .streams-list
            width: 340px
            height: 100%
            border-right: 1px solid var(--shade3)
            overflow-y: auto
            background-color: var(--card-background-color)
            transition: width 0.3s ease-in-out
            padding: 0 10px 0 10px
            box-sizing: border-box

        .streams-list.collapsed
            width: 0
            padding: 0

        .streams-list.expanded
            width: 340px

        .streams-header
            display: flex
            align-items: center
            justify-content: space-between
            padding: 10px
            background-color: var(--card-background-color)
            border-bottom: 1px solid var(--shade3)

        .language-select
            flex: 1
            margin-left: 10px

        .stream-pane
            flex: 1
            display: flex
            justify-content: center
            align-items: center
            background-color: var(--bg)
            overflow: hidden
            position: relative
            transition: flex 0.3s ease-in-out

        .stream-pane.shrunk
            flex: 1

        .stream-pane.expanded
            flex: 3

        iframe
            width: 100%
            height: 100%
            border: none

        .list-pane-control
            position: absolute
            top: 50%
            left: 340px
            transform: translateY(-50%)
            display: flex
            align-items: center
            justify-content: center
            z-index: 10
            background: linear-gradient(135deg, #00c6ff, #0072ff)
            color: #FFFFFF
            border: none
            height: 100px 
            width: 20px 
            cursor: pointer
            transition: background 0.3s ease-in-out, left 0.3s ease-in-out, transform 0.3s ease-in-out
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2)
            font-size: 1rem 
            font-weight: normal
            border-radius: 0 10px 10px 0

            &::after
                font-family: "FontAwesome"
                content: "\f053" // FontAwesome left arrow
                display: inline-block
                transition: content 0.3s ease-in-out

        .list-pane-control.collapsed
            left: 0
            &::after
                content: "\f0c9" // FontAwesome list icon

            &:hover
                &::after
                    content: "\f054" // FontAwesome right arrow on hover

        .chat-pane-control
            position: absolute
            top: 50%
            right: 320px
            transform: translateY(-50%)
            display: flex
            align-items: center
            justify-content: center
            z-index: 10
            background: linear-gradient(135deg, #00c6ff, #0072ff)
            color: #FFFFFF
            border: none
            height: 100px 
            width: 20px 
            cursor: pointer
            transition: background 0.3s ease-in-out, right 0.3s ease-in-out, transform 0.3s ease-in-out
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2)
            font-size: 1rem 
            font-weight: normal 
            border-radius: 10px 0 0 10px

            &::after
                font-family: "FontAwesome"
                content: "\f054" // FontAwesome right arrow
                display: inline-block
                transition: content 0.3s ease-in-out

        .chat-pane-control.collapsed
            right: 0
            &::after
                content: "\f086" // FontAwesome chat icon

            &:hover
                &::after
                    content: "\f053" // FontAwesome left arrow on hover

        .chat-pane
            flex: 0 0 320px
            height: 100%
            padding: 0
            border-left: 1px solid var(--shade3)
            overflow-y: auto
            background-color: var(--card-background-color)
            position: relative
            transition: flex 0.3s ease-in-out, transform 0.3s ease-in-out

        .chat-pane.collapsed
            flex: 0 0 0
            transform: translateX(320px)

        .chat-pane.expanded
            flex: 0 0 320px
            transform: translateX(0)

        .EmbeddedChatCard
            min-width: 100%
            margin: 0
            height: 100%
            overflow: hidden
            box-sizing: border-box

        .chat-tabs
            display: flex
            justify-content: center
            height: 45px
            background-color: var(--card-background-color)
            border-bottom: 1px solid var(--shade3)

        .chat-tab
            flex: 1
            text-align: center
            padding: 10px
            cursor: pointer
            border-bottom: 2px solid transparent
            transition: background-color 0.3s ease-in-out, border-bottom 0.3s ease-in-out

        .chat-tab.active
            border-bottom: 2px solid var(--primary)
            background-color: var(--shade2)

        .chat-content
            position: relative
            height: calc(100% - 45px)

        .chat-section
            position: absolute
            top: 0
            left: 0
            width: 100%
            height: 100%
            display: none

        .chat-section.active
            display: block

        .chat-section.hidden
            display: none

