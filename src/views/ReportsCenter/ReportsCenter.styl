#ReportsCenterContainer {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    //align-items: stretch;
    align-items: flex-start;
}

#ReportsCenterCategoryList {
    border: 1px solid black;
    themed border-color shade3
    flex-basis: 15rem;

    .Category {
        cursor: pointer;
        padding: 0.7rem;

        display: flex;
        justify-content: space-between;
        align-items: center;

        &.selected {
            themed background-color primary
            themed color colored-background-fg
        }

        .spacer {
            display: inline-block;
            width: 1rem;
        }

        i {
            display: inline-block;
            width: 1rem;

        }
    }
}

#SelectedReport {
    flex: 1;

    .help-details-greyed {
        themed color shade4
    }
}

// Mobile
@media (max-width: 767px) {
    #ReportsCenterCategoryList {
        display: none;
    }
    #ReportsCenterContainer {
        flex-direction: column;
    }
    #SelectedReport {
        padding-top: 1rem;
    }


    #ReportsCenterCategoryDropdown {
        .reports-center-category-container {
            padding-left: 1rem;
            padding-right: 1rem;
        }
    }
    #ReportsCenterContainer {
        align-items: stretch;
    }
}

// Desktop
@media (min-width: 768px) {
    #ReportsCenterCategoryDropdown {
        display: none;
    }
    #SelectedReport {
        padding-left: 1rem;
        padding-right: 1rem;
    }
}
