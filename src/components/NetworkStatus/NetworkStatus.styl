.NetworkStatus {
    position: absolute;
    z-index: z.network-warning;
    top: 4rem;
    right: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #eee;
    color: red;

    @keyframes fadeInOut {
        0% { opacity: 1; }
        50% { opacity: 0.5; }
        100% { opacity: 1; }
    }
    i {
        position: absolute;
    }
    i.fa-2x {
        opacity: 0.7;
    }
    i.fa-wifi{
        animation: fadeInOut 1s infinite;
    }
}
.NetworkStatus.hidden {
    display: none;
}