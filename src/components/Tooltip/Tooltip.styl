.TooltipContainer {
    position: relative;
    font-family: inherit;

    .Tooltip {
        display: none;
        font-family: inherit;
        background-color: #000000;
        width: 200px;
        border-radius: 5px;
        position: absolute; 
        left: -220px;
        top: 50%;  
        transform: translateY(-50%);
        box-sizing: border-box;
        padding: 0.5em;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        border: 1px solid #333333;

        &.disabled {
            opacity: 0;
        }

            .title {
                font-family: inherit;
                font-weight: bolder;
                margin: 0;
                color: #FFF;
                font-size: 0.8em;
            } 
            
            .text {
                font-family: inherit;
                font-weight: lighter;
                margin: 0;
                font-size: 0.8em;
                color: #888888;
            } 
    }
}

.TooltipContainer:hover {
    .Tooltip {
        display: block;
    }
}

.Tooltip::before {
    content: '';
    position: absolute;
    width: 15px;
    height: 15px;
    border-radius: 3px;
    background-color: #000000;
    left: 190px;
    top: 50%;
    transform: translateY(-50%) rotate(45deg);
    z-index: -1;
}

@media only screen and (max-width: 600px) {
  .TooltipContainer:hover {
    .Tooltip {
        display: none;
    }
  }
}

@media only screen and (max-height: 500px) {
  .TooltipContainer:hover {
    .Tooltip {
        display: none;
    }
  }
}